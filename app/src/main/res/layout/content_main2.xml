<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.toluwase.higherorlower.Main2Activity"
    tools:showIn="@layout/activity_main2"
    android:layout_margin="10dp"
    >
<RelativeLayout
    android:layout_width="348dp"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:layout_marginRight="8dp"
    app:layout_constraintRight_toRightOf="parent"
    tools:layout_constraintTop_creator="1"
    android:layout_marginEnd="8dp"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginLeft="8dp"
    app:layout_constraintLeft_toLeftOf="parent">
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="I am thinking of a number between 1 &amp; 20."
    android:id="@+id/text_thinking"
    tools:layout_editor_absoluteY="0dp"
    tools:layout_editor_absoluteX="0dp" />
<TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Can you guess it?"
    android:textSize="30sp"
        android:id="@+id/text_guess"
        android:layout_below="@+id/text_thinking"
    android:layout_marginTop="10dp"
    tools:layout_editor_absoluteY="0dp"
    tools:layout_editor_absoluteX="0dp" />
<EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textSize="40dp"
    android:text=""
    android:inputType="numberSigned"
    android:maxLength="2"
    android:textColor="@color/colorAccent"
    android:layout_below="@id/text_guess"
    android:id="@+id/input_guess" />
    <Button
        android:id="@+id/guessButton"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="GUESS"
        android:clickable="true"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:layout_below="@id/input_guess"
        android:layout_marginTop="30dp"
        tools:layout_editor_absoluteY="159dp"
        tools:layout_editor_absoluteX="140dp" />
</RelativeLayout>

    <!--android:background="@drawable/buttonshape"-->

</android.support.constraint.ConstraintLayout>
